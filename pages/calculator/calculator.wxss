/* pages/calculator/calculator.wxss */

.content {
  width: 100%;
  height: 600px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-repeat: repeat;
  background-image: url("../image/image_three.jpg");
  padding: 30px;
}

.resultText {
  background: white;
  border-radius: 3px;
  width: 720rpx;
  text-align: right;
  line-height: 30px;
  height: 30px;
  margin-bottom: 10px;
  color: black;
}

.btnGroup {
  display: flex;
  flex-direction: row;
}

.item {
  width: 160rpx;
  height: 100rpx;
  margin: 10rpx;
  text-shadow: 0 1px 1px rgb(0, 0, 0, 3);
  text-align: center;
  line-height: 100rpx;
  background: #acacac;
}

.one {
  color: #fef4e9;
  border: solid 1px #da7c8c;
}

.two {
  color: #d9eef7;
  border: solid 1px #0076a3;
}
